#:kivy 1.8.0
# wordapp.kv
# Kivy GUI Layout Specification for word puzzle
# Walker M. White
# October 1, 2014

# For dialog boxes
<InfoPanel>:
    msgLabel:  message
    infoField: info
    okButton:  okay
    noButton:  cancel
    orientation: 'vertical'
    padding: 10
    
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        size_hint: (1,0.4)
        
        Label:
            id: message
            text: 'Enter your net-id:'
            color: (1,1,1,1)
            font_size: 24
            bold: True
    
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        size_hint: (1,0.2)
        padding: 30
        
        TextInput:
            id: info
            multiline: False
            font_size: 24
            padding_y: 10
            padding_x: 10
            size_hint: (None,None)
            size: (150,50)
    
    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1,0.4)
        padding: 20
        
        Button:
            id: okay
            text: 'OK'
            bold: True
            size_hint: (0.5,1)
            on_press: self.parent.parent.on_okay()
        
        Widget:
            size: (20, 0)
            size_hint: (None, 1)
        
        Button:
            id: cancel
            text: 'Cancel'
            bold: True
            size_hint: (0.5,1)
            on_press: self.parent.parent.on_cancel()
        
        
<TopPanel>:
    startButton: start
    resetButton: reset
    saveButton:  save
    loadButton:  load
    statusLabel: status
    orientation: 'horizontal'
    padding: 10

    Button:
        id: start
        text: 'New'
        bold: True
        size_hint: (0.1,1)
        on_press: root.parent.on_new_game()

    Widget:
        size: (10, 0)
        size_hint: (None, 1)

    Button:
        id: reset
        text: "Reset"
        bold: True
        size_hint: (0.1,1)
        on_press: root.parent.on_reset()

    Widget:
        size: (10, 0)
        size_hint: (None, 1)

    Button:
        id: save
        text: "Save"
        bold: True
        size_hint: (0.1,1)
        on_press: root.parent.on_save()

    Widget:
        size: (10, 0)
        size_hint: (None, 1)

    Button:
        id: load
        text: "Load"
        bold: True
        size_hint: (0.1,1)
        on_press: root.parent.on_load()

    Label:
        id: status
        text: ''
        color: (1,1,1,1)
        font_size: 36
        bold: True
        size: (25,0)
        size_hint: (0.5,1)

<BotPanel>:
    puzzlePanel: puzzle
    anchor_x: 'center'
    anchor_y: 'center'
    padding: 10
    
    PuzzleWidget:
        id: puzzle
        rows: 7
        cols: 7
        font_size: 36
        size: [420,420]
        size_hint: (None,None)



<WordPuzzleWidget>:
    orientation: 'vertical'
    top: top_panel
    bot: bot_panel

    TopPanel:
        id: top_panel
        size_hint: (1,0.1)

    BotPanel
        id: bot_panel
        size_hint: (1,0.9)
